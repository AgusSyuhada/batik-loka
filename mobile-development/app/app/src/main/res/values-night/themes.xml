<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BatikLoka" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <!-- Background Utama -->
        <item name="android:windowBackground">@color/ivory_white</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">#000000</item>
    </style>

    <style name="CircularFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerSize">50%</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Theme.ui.splash.SplashScreen" parent="Base.Theme.BatikLoka">
        <item name="android:windowBackground">@color/ivory_white</item>
    </style>

    <style name="CustomNewsNotificationSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:trackTint" tools:ignore="NewApi">@drawable/switch_track_color</item>
        <item name="android:thumbTint">@drawable/switch_thumb_color</item>
    </style>
</resources>